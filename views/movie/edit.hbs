<div class="container text-center mt-3 col-md-8">
    <form class="card bg-light ml-3 mr-3" action="/movie/edit/{{movie._id}}" method="post">
        <h1 class="text text-primary mt-2 mb-2">Edit new movie</h1>

        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="title">Title</label>
            <input type="text" class="form-control" name="title" value="{{movie.title}}" required minlength="3"
                maxlength="30">
        </div>

        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="actor">Actor</label>
            <input type="text" class="form-control" name="actor" value="{{movie.actor}}" required />
        </div>

        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="director">Director</label>
            <input type="text" class="form-control" name="director" value="{{movie.director}}" required />
        </div>

        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="year">Year</label>
            <input type="number" class="form-control" name="year" value="{{movie.year}}" required />
        </div>

        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="poster">Poster</label>
            <img src="{{movie.poster}}" width="100" height="150" alt="">
            <input type="text" class="form-control" name="poster" value="{{movie.poster}}" required />
        </div>

        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="trailer">Trailer</label>
            <br />
            <iframe width="400" height="300" src="https://www.youtube.com/embed/{{movie.trailer}}"></iframe>
            <input type="text" class="form-control" name="trailer" value="{{movie.trailer}}" required />
        </div>


        <div class="form-group mt-2 mb-2">
            <input type="submit" class="btn btn-danger" name="submit" value="Update">
        </div>
    </form>
</div>