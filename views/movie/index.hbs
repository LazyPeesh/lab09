<table class="table table-bordered">
    <tr>
        <th colspan="6">MOVIE LIST</th>
        <th>
            <a class="btn btn-primary" href="/movie/add">Add</a>
        </th>
    </tr>
    <tr>
        <th>Title</th>
        <th>Actor</th>
        <th>Director</th>
        <th>Year</th>
        <th>Poster</th>
        <th>Trailer</th>
        <th>Menu</th>
    </tr>

    {{#each movies }}

    <tr>
        <th>{{ title }}</th>
        <th>{{ actor }}</th>
        <th>{{ director }}</th>
        <th>{{ year }}</th>
        <th><img src="{{poster}}" width="150" height="200" alt=""></th>
        <th>
            <iframe width="400" height="300" src="https://www.youtube.com/embed/{{trailer}}"></iframe>
        </th>
        <th>
            <a href="/movie/edit/{{_id}}" class="btn btn-warning">Edit</a>
            <a href="/movie/delete/{{_id}}" class="btn btn-danger"
                onclick="return confirm('Do you want to delete this movie')">Delete</a>
        </th>
    </tr>
    {{/each}}
</table>