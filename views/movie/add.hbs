<div class="container text-center mt-3 col-md-8">
    <form class="card bg-light ml-3 mr-3" action="/movie/add" method="post">
        <h1 class="text text-primary mt-2 mb-2">Add new movie</h1>

        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="title">Title</label>
            <input type="text" class="form-control" name="title" required minlength="3" maxlength="30">
        </div>

        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="actor">Actor</label>
            <input type="text" class="form-control" name="actor" required />
        </div>

        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="director">Director</label>
            <input type="text" class="form-control" name="director" required />
        </div>

        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="year">Year</label>
            <input type="number" class="form-control" name="year" required />
        </div>

        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="poster">Poster</label>
            <input type="text" class="form-control" name="poster" required />
        </div>

        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="trailer">Trailer</label>
            <input type="text" class="form-control" name="trailer" required />
        </div>


        <div class="form-group mt-2 mb-2">
            <input type="submit" class="btn btn-danger" name="submit" value="Add">
        </div>
    </form>
</div>